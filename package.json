{
  "name": "untention",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test": "npm run test:unit && npm run test:e2e",
    "lint": "eslint . --ext js,jsx,cjs --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "glob": "^11.0.2",
    "husky": "^9.0.11",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.7",
    "localforage": "^1.10.0",
    "prettier": "^3.3.2",
    "vite": "^6.3.5",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^3.2.2"
  },
  "dependencies": {
    "dompurify": "^3.2.6",
    "quill": "^2.0.3"
  },
  "lint-staged": {
    "*.{js,jsx,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{html,css,json,md}": [
      "prettier --write"
    ]
  }
}
